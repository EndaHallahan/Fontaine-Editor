{
  "name": "@fontaine/app-backend",
  "description": "The desktop application backend for Fontaine.",
  "author": "EndaHallahan",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fontaine/app-frontend": "link:../app-frontend",
    "cross-env": "6.0.2",
    "electron-is-dev": "1.1.0",
    "electron-log": "^3.0.8",
    "react": "link:../app-frontend/node_modules/react",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "concurrently": "4.1.2",
    "customize-cra": "^1.0.0",
    "electron": "9.0.0",
    "electron-build-env": "^0.2.0",
    "electron-builder": "^21.2.0",
    "neon-cli": "^0.4.0",
    "react-app-rewired": "^2.1.6",
    "react-scripts": "3.1.2",
    "wait-on": "3.3.0"
  },
  "build": {
    "productName": "Fontaine",
    "appId": "org.Fontaine.app",
    "directories": {
      "buildResources": "build-assets",
      "output": "dist"
    }
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-test": "react-app-rewired test --env=jsdom",
    "react-eject": "react-scripts eject",
    "regenerate-test-project": "robocopy test-project-clean ./test-project /s & exit 0",
    "native-build": "cd public/main/native/r-fs && electron-build-env --electron 9.0.0 -- neon build --release",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
